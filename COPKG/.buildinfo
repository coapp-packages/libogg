#product-info  {
    product-name: "libogg";
    version: "1.3.0";
    original-source-location: "http://downloads.xiph.org/releases/ogg/libogg-1.3.0.tar.gz";
    original-source-website: "http://xiph.org/downloads/";
    license: "Modified BSD License";
    packager: "Vincent Povirk <madewokherd@gmail.com>";
}

x86 {
    compiler: vc10;
    
    targets: { 
        "win32\VS2010\Win32\Release\libogg.dll",
        "win32\VS2010\Win32\Release\libogg.lib",
    };
     
    build-command:@"
        msbuild /p:Platform=Win32 /p:Configuration=Release win32\VS2010\libogg_dynamic.sln
    ";
     
    clean-command:@"
        del /Q /S win32\VS2010\Win32
    ";
};
